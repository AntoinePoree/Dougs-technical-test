{
  // Formatte automatiquement le code à la sauvegarde
  "editor.formatOnSave": true,
  // Réduit la taille que prends un onglet
  "window.density.editorTabHeight": "compact",
  // Favorise les suggestions de code plus proche du fichier courant lors de la proposition CTRL + Espace
  "editor.suggest.localityBonus": true,
  // Prends en compte l'historique d'édition lors de la proposition CTRL + Espace
  "workbench.editor.preferHistoryBasedLanguageDetection": true,
  "editor.formatOnType": true, // required
  "editor.formatOnPaste": true, // optional
  "typescript.autoClosingTags": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.cursorBlinking": "expand",
  // === DEBUT ESLINT ===
  // https://marketplace.visualstudio.com/items?itemName=dbaeumer.vscode-eslint
  // Formattage du code par l'extension Eslint
  // - Retire automatiquement les imports non utilisés
  // - Formate le code
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.removeUnused.ts": "never",
      "source.sortImports": "always",
    },
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.configPath": "./.prettierrc",
  "json.validate.enable": true,
  // === FIN PRETTIER ESLINT ===
  // === DEBUT ESLINT ===
  "eslint.validate": [
    "typescript"
  ],
  "eslint.useFlatConfig": true,
  "eslint.options": {
    "overrideConfigFile": "eslint.config.js",
    "cache": true
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // === FIN ESLINT ===
  // === DEBUT STYLELINT ===
  // https://marketplace.visualstudio.com/items?itemName=stylelint.vscode-stylelint
  // Souligne les erreurs de style coté CSS, la configuration est dans le fichier .stylelintrc.json à la racine du projet
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // === FIN STYLELINT ===
  // === DEBUT CONSOLE NINJA ===
  // Utilise la version gratuite de Console Ninja
  "console-ninja.featureSet": "Community",
  // === FIN CONSOLE NINJA ===
  // === DEBUT INDENT RAINBOW ===
  // Colore les indentations de couleur differente en fonction de la profondeur de l'indentation
  // Les couleurs sont dans l'ordre de profondeur, le dernier chiffre dans rgba correspond à la transparence de la couleur
  "indentRainbow.colors": [
    "rgba(255,255,64,0.15)",
    "rgba(127,255,127,0.15)",
    "rgba(255,127,255,0.15)",
    "rgba(79,236,236,0.15)"
  ],
  // Colore les erreurs d'indentation
  "indentRainbow.errorColor": "rgba(128,32,32,0.05)",
  // Colore le mélange de tabulation et d'espace
  "indentRainbow.tabmixColor": "rgba(128,32,96,0.6)",
  // Attends 200ms avant de changer les couleurs
  "indentRainbow.updateDelay": 200,
  // === FIN INDENT RAINBOW ===
  // Active la détection de jonction des accolades
  "editor.guides.bracketPairs": true,
  // Active la détection de jonction des accolades sur une même ligne
  "editor.guides.bracketPairsHorizontal": true,
  // Colore de la même couleur les accolades de englobant le même code
  "editor.bracketPairColorization.enabled": true,
  // Met en surbrillance les accolades les plus proches de la position du curseur
  "editor.guides.highlightActiveBracketPair": true,
  // Active la détection de l'indentation
  "editor.guides.indentation": true,
  // Met en surbrillance les indentations les plus proches de la position du curseur
  "editor.guides.highlightActiveIndentation": true,
  // Ajoute des paramètres par défaut pour les nouveaux composants
  "angular-cli.component.options": "--change-detection=OnPush --standalone --style=scss --skip-tests",
  // Ajoute des paramètres par défaut pour les nouveaux services
  "angular-cli.service.options": "--flat --skip-tests",
  // Ajoute des paramètres par défaut pour les nouveaux pipes
  "angular-cli.pipe.options": "--flat --skip-import --skip-tests --standalone",
  // Ajoute des paramètres par défaut pour les nouveaux directives
  "angular-cli.directive.options": "--flat --skip-import --skip-tests --standalone",
  // Ajoute des paramètres par défaut pour les nouveaux modules
  "angular-cli.module.options": "--flat --routing",
  // === DEBUT MATERIAL ICONS ===
  // https://marketplace.visualstudio.com/items?itemName=PKief.material-icon-theme
  // Change les icones des fichiers et dossiers dans l'explorateur de fichiers
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "angular",
  "material-icon-theme.files.associations": {
    "*.store.ts": "ngrx-selectors",
    "*.ui-store.ts": "ngrx-state",
    "*.config.ts": "conduct",
    "*.model.ts": "log",
    "*.enum.ts": "lib",
    "*.constant.ts": "table",
    "public-api.ts": "purescript",
    "*.util.ts": "hardhat",
    "*.mock.ts": "jest"
  },
  "material-icon-theme.folders.associations": {
    "ui": "views",
    "accueil-tableau-de-bord": "context",
    "edition-liste-travaux": "pdf",
    "honoraires-liste": "enum",
    "honoraires-liste-conventions": "enum",
    "intervenants-liste": "dist",
    "planification-planning-equipes": "update",
    "planification-tableau-de-roulement": "update",
    "planification-tournee": "update",
    "parametres-association": "config",
